#include <iostream>
#include <string>

using namespace std; 

int main(int argc, char* argv[])
{
  if (argc < 2)
    { cout << "Usage: " << argv[0] << " N [ -o outputfile]" << endl; }
  int N = stoi(argv[1]);

  string outputFilename = "";
  for (int opt = 2; opt < argc; ++opt)
    {
      if (string(argv[opt]) == "-o")
	{
	  ++opt;
	  if (opt >= argc)
	    { cout << "No output file specified" << endl; }
	  outputFilename = argv[opt];
	}
    }
  return 0;
}
